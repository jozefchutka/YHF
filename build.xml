<?xml version="1.0" encoding="UTF-8"?>
<project name="bell-information" default="compile-sample-only">
	<target name="validate">
		<exec executable="haxelib" failonerror="true">
			<arg value="run"/>
			<arg value="yhaxen"/>
			<arg value="validate"/>
		</exec>
	</target>

	<target name="compile-sample-only">
		<exec executable="haxelib" failonerror="true">
			<arg value="run"/>
			<arg value="yhaxen"/>
			<arg value="compile:compile-sample"/>
		</exec>
	</target>

	<target name="test-only">
		<exec executable="haxelib" failonerror="true">
			<arg value="run"/>
			<arg value="yhaxen"/>
			<arg value="test:*"/>
		</exec>
	</target>
</project>